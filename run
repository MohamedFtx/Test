#!/bin/bash

read -p "enter the file name: " name
touch $name
read -p "enter the code: " code

if [ $name == README.md ]; then

	echo -e $code >> $name
else
	echo -e '#!/bin/bash\n'$code >> $name

fi

chmod u+x $name
cat $name
git add .
echo 'enter your commit: '
read -a txt
git commit -m$txt
git push
# for loop from 1/10 to 10/10
for a in `seq 1 10`; do
    echo "$a/10 to Exit."
    sleep 1;
done
