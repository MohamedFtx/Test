#!/bin/bash

read -p "enter the file name: " name
touch $name
read -p "enter the code: " code

if [ $name == README.md ]; then

	echo -e $code >> $name
else
	echo -e '#!/bin/bash\n'$code >> $name

fi

chmod u+x $name
cat $name
git add .
echo 'enter your commit: '
read -a txt
git commit -m$txt
git push
